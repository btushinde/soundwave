
// Includes
@import 'global'


header
  .profile
    img
      width: 100%
  .meta
    margin-top: 50px

.likes
  li
    margin-bottom: 50px
    .panel
      height: 190px
      padding: 0
      h2
        font-size: 1em

      img
        width: 100%



// Additional Global Styles
.toggle
  transition: linear 0.3s all

  &.ng-enter
    opacity: 0
  &.ng-enter-stagger
    transition-delay: 0.05s
    transition-duration: 0s

  &.ng-enter-active

  &.ng-leave

  &.ng-leave-active
    opacity:0
